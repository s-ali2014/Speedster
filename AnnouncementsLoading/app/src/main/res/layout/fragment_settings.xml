<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="208dp"
        android:paddingBottom="0dp"
        android:text="Announcement Mode"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="24dp"
        tools:layout_conversion_absoluteWidth="175dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="356dp"
        android:paddingBottom="0dp"
        android:text="Frequency of Notification"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="24dp"
        tools:layout_conversion_absoluteWidth="205dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/intervalSlider"
        android:layout_width="284dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="388dp"
        android:gravity="right"
        android:hint="0"
        android:maxEms="2"
        android:stepSize="5.0"
        android:valueFrom="5.0"
        android:valueTo="15.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="45dp"
        tools:layout_conversion_absoluteWidth="21dp" />

    <Switch
        android:id="@+id/maxSpeedWarn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="305dp"
        android:text="Play tone when over max speed? \n \n"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/speedRange"
        android:layout_width="284dp"

        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="148dp"
        android:gravity="right"
        android:hint="0"
        android:maxEms="2"
        android:stepSize="10.0"
        android:valueFrom="0"
        android:valueTo="100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:minSeparation="0dp"
        app:values="@array/speed_slider_values"
        tools:layout_conversion_absoluteHeight="45dp"
        tools:layout_conversion_absoluteWidth="21dp" />

    <TextView
        android:id="@+id/pageCounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="216dp"
        android:layout_marginTop="124dp"
        android:text="Max Speed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="24dp"
        tools:layout_conversion_absoluteWidth="91dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:paddingBottom="0dp"
        android:text="Min Speed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="24dp"
        tools:layout_conversion_absoluteWidth="87dp" />

    <RadioButton
        android:id="@+id/radSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="232dp"
        android:text="Spoken"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radTone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="232dp"
        android:text="Tone"
        app:layout_constraintStart_toEndOf="@+id/radSpeak"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/announceModes"
        android:layout_width="248dp"
        android:layout_height="63dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="232dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>