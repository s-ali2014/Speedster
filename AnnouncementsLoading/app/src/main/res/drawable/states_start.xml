<?xml version="1.0" encoding="utf-8"?>

<!-- UI asset source states, order is based on precedence -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Show lock when disabled-->
    <item android:drawable="@drawable/button_start_locked"
        android:state_enabled="false"/>

    <!--Show pressed asset when pressed, otherwise base asset, stop takes precedence while button is active-->
    <item android:drawable="@drawable/button_stop_pressed"
        android:state_pressed="true"
        android:state_activated="true"/>
    <item android:drawable="@drawable/button_stop"
        android:state_activated="true"/>

    <item android:drawable="@drawable/button_start_pressed"
        android:state_pressed="true"/>
    <item android:drawable="@drawable/button_start"/>
</selector>